<Page x:Class="InventoryApp.Views.InventoryTrackingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="600" Width="900"
      Title="Inventory Tracking">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="713*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Background="SteelBlue" Height="50" Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBlock Text="Inventory Tracking" FontSize="24" FontWeight="Bold"  
                       VerticalAlignment="Center" Margin="10" Foreground="White"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Add Stock Movement Form -->
            <GroupBox Margin="5" Grid.Column="0" Background="White" BorderBrush="Gray" BorderThickness="2">
                <GroupBox.Header>
                    <TextBlock Text="Add Stock Movement" FontSize="14" FontWeight="SemiBold" Foreground="Black" Background="LightSkyBlue" Padding="5"/>
                </GroupBox.Header>
                <StackPanel Margin="10">
                    <TextBlock Text="Product ID" Foreground="Gray"/>
                    <TextBox Name="ProductIDTextBox" Margin="5"/>

                    <TextBlock Text="Quantity" Foreground="Gray"/>
                    <TextBox Name="QuantityTextBox" Margin="5"/>

                    <TextBlock Text="Movement Type" Foreground="Gray"/>
                    <ComboBox Name="MovementTypeComboBox" Margin="5">
                        <ComboBoxItem Content="IN"/>
                        <ComboBoxItem Content="OUT"/>
                        <ComboBoxItem Content="ADJUSTMENT"/>
                    </ComboBox>

                    <TextBlock Text="Description" Foreground="Gray"/>
                    <TextBox Name="DescriptionTextBox" Margin="5"/>

                    <Button Name="AddMovementButton" Content="Add Movement" Width="100" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Stock Movements DataGrid -->
            <GroupBox Margin="5" Grid.Column="1" Background="White" BorderBrush="Gray" BorderThickness="2">
                <GroupBox.Header>
                    <TextBlock Text="Stock Movements" FontSize="14" FontWeight="SemiBold" Foreground="Black" Background="LightSkyBlue" Padding="5"/>
                </GroupBox.Header>
                <DataGrid Name="StockMovementsDataGrid" Margin="10" AutoGenerateColumns="True" />
            </GroupBox>
        </Grid>
    </Grid>
</Page>
