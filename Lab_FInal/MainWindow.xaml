<Window x:Class="lab_final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Management" Height="600" Width="800">
    <Grid>
        <!-- DataGrid -->
        <DataGrid x:Name="QuizDataGrid" AutoGenerateColumns="False" Margin="340,20,20,230">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Question ID" Binding="{Binding QuestionID}" Width="100"/>
                <DataGridTextColumn Header="Question Text" Binding="{Binding QuestionText}" Width="200"/>
                <DataGridTextColumn Header="Options" Binding="{Binding Options}" Width="200"/>
                <DataGridTextColumn Header="Correct Answer" Binding="{Binding CorrectAnswer}" Width="150"/>
                <DataGridTextColumn Header="Marks" Binding="{Binding AssignedMarks}" Width="100"/>
                <DataGridTextColumn Header="Time Limit" Binding="{Binding TimeLimitSeconds}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Input Form -->
        <StackPanel Margin="20,20,0,20" HorizontalAlignment="Left" Width="300">
            <TextBlock Text="Question Text:" />
            <TextBox x:Name="QuestionTextBox" Width="280" />

            <TextBlock Text="Option 1:" />
            <TextBox x:Name="Option1TextBox" Width="280" />

            <TextBlock Text="Option 2:" />
            <TextBox x:Name="Option2TextBox" Width="280" />

            <TextBlock Text="Option 3:" />
            <TextBox x:Name="Option3TextBox" Width="280" />

            <TextBlock Text="Option 4:" />
            <TextBox x:Name="Option4TextBox" Width="280" />

            <TextBlock Text="Correct Answer:" />
            <TextBox x:Name="CorrectAnswerTextBox" Width="280" />

            <TextBlock Text="Assigned Marks:" />
            <TextBox x:Name="AssignedMarksTextBox" Width="280" />

            <TextBlock Text="Time Limit (Seconds):" />
            <TextBox x:Name="TimeLimitTextBox" Width="280" />

            <TextBlock Text="Topic:" />
            <TextBox x:Name="TopicTextBox" Width="280" />

            <TextBlock Text="Difficulty Level:" />
            <ComboBox x:Name="DifficultyComboBox" Width="280">
                <ComboBoxItem Content="Easy" />
                <ComboBoxItem Content="Medium" />
                <ComboBoxItem Content="Hard" />
            </ComboBox>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Question" Width="140" Margin="0,0,10,0" Click="AddQuestionButton_Click" />
                <Button Content="Edit Question" Width="140" Click="EditQuestionButton_Click" />
            </StackPanel>
        </StackPanel>

        <!-- ProgressBar -->
        <ProgressBar x:Name="LoadingProgressBar" Margin="20,550,20,10" Height="20" Visibility="Collapsed" />
    </Grid>
</Window>
