<Page x:Class="InventoryApp.Views.ProductManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F7F9FB" Title="Product Management">

    <Grid Background="#F7F9FB">
        <!-- Header -->
        <TextBlock Text="Product Management" FontSize="30" FontWeight="ExtraBold" Foreground="SteelBlue" HorizontalAlignment="Center" Margin="10"/>

        <!-- Form to add or update product -->
        <StackPanel Orientation="Vertical" Margin="20,50,20,10">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Product Name: " VerticalAlignment="Center" Width="120" Foreground="#333333"/>
                <TextBox Name="ProductNameTextBox" Width="200" Background="#FFFFFF" BorderBrush="#CCCCCC" Foreground="#333333"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Product Code: " VerticalAlignment="Center" Width="120" Foreground="#333333"/>
                <TextBox Name="ProductCodeTextBox" Width="200" Background="#FFFFFF" BorderBrush="#CCCCCC" Foreground="#333333"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Category: " VerticalAlignment="Center" Width="120" Foreground="#333333"/>
                <TextBox Name="CategoryTextBox" Width="200" Background="#FFFFFF" BorderBrush="#CCCCCC" Foreground="#333333"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Price: " VerticalAlignment="Center" Width="120" Foreground="#333333"/>
                <TextBox Name="PriceTextBox" Width="200" Background="#FFFFFF" BorderBrush="#CCCCCC" Foreground="#333333"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Stock Quantity: " VerticalAlignment="Center" Width="120" Foreground="#333333"/>
                <TextBox Name="StockQuantityTextBox" Width="200" Background="#FFFFFF" BorderBrush="#CCCCCC" Foreground="#333333"/>
            </StackPanel>
        </StackPanel>

        <!-- Additional Buttons -->
        <StackPanel Orientation="Vertical" Margin="614,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Content="Delete Selected Product" Width="150" Margin="5" Background="#E63946" Foreground="White" Click="DeleteSelectedProduct_Click" Padding="10,5"/>
            <Button Content="Update Product" Width="150" Margin="5" Background="#2A9D8F" Foreground="White" Click="UpdateProduct_Click" Padding="10,5"/>
            <Button Content="Clear Inputs" Width="150" Margin="5" Background="#457B9D" Foreground="White" Click="ClearInputs_Click" Padding="10,5"/>
            <Button Content="Add Product" Width="150" Margin="5" Background="#264653" Foreground="White" Click="AddProduct_Click" Padding="10,5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#264653"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1B3A4B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- DataGrid to display products -->
        <DataGrid Name="ProductsDataGrid" AutoGenerateColumns="False" Margin="20,250,20,10" Background="#FFFFFF" Foreground="#333333" AlternatingRowBackground="#F7F9FB">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product Code" Binding="{Binding ProductCode}" Width="150"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="150"/>
                <DataGridTextColumn Header="Stock Quantity" Binding="{Binding StockQuantity}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
