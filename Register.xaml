<Window x:Class="InventoryApp.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Name="registrationPage">
    <!-- Change this line -->
    <Grid Background="LightGray">
        <Border Width="320" Height="400" Background="White" CornerRadius="10" 
                VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#D3D3D3" BorderThickness="1">
            <StackPanel Margin="10,10,10,0" VerticalAlignment="Top" Height="Auto">

                <StackPanel Margin="0,10,0,20" HorizontalAlignment="Center">
                    <TextBlock Text="Inventory Management System" FontWeight="Bold" FontSize="16" Foreground="SteelBlue" HorizontalAlignment="Center"/>
                    <TextBlock Text="Please Register" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0" FontStyle="Italic" FontWeight="Bold"/>
                </StackPanel>

                <TextBlock Text="User Name:" FontSize="12" Foreground="Black" Margin="10,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Margin="10,0,10,10" BorderBrush="#CCCCCC" BorderThickness="1"/>

                <TextBlock Text="Password:" FontSize="12" Foreground="Black" Margin="10,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="10,0,10,10" BorderBrush="#CCCCCC" BorderThickness="1"/>

                <Button Content="Register" Width="100" Height="35" HorizontalAlignment="Center" Background="#007ACC" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="16" Click="RegisterButton_Click"/>

                <TextBlock x:Name="txtMessage" FontSize="12" Foreground="Red" TextAlignment="Center" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Already have an account?" Foreground="Gray" FontSize="12" VerticalAlignment="Center"/>
                    <Button x:Name="btnLogin" Content="Login Here" Width="100" Height="30" Background="White" Foreground="SteelBlue" BorderBrush="SteelBlue" BorderThickness="1" Cursor="Hand" Click="NavigateToLoginPage"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
